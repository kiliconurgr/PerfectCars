@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;

@model IEnumerable<MVCPerfectCarsData.Portfolio>

@{
    ViewData["Title"] = "Özellik Tanımları";
}



<p>
    <a asp-action="Create">
        <button class="btn btn-primary">Yeni Kayıt</button>

    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Enabled)
                    {
                        <span class=" text-success">
                            <i class="fa fa-check"></i>
                        </span>
                    }
                    else
                    {
                        <span class=" text-danger">
                            <i class="fa fa-times"></i>
                        </span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfCreation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa fa-pen"></i>
                    </a> |

                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
