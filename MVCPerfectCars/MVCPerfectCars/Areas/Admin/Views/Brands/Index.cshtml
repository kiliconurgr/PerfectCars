@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Marka Tanımları";

}


<div class="p-2 text-right">

    <a class="btn btn-primary" asp-action="Create">
        Yeni Kayıt
    </a>

</div>

<div class="card">

    <div class="card-body">

        @if (Model.Any())
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(p => p.Name)</th>
                        <th>@Html.DisplayNameFor(p => p.Enabled)</th>
                        <th>@Html.DisplayNameFor(p => p.DateOfCreation)</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <partial name="_EnabledPartial" model="@item.Enabled" />
                            </td>
                            <td>
                                @item.DateOfCreation.ToLongDateString()
                            </td>
                            <td>
                                <a class="btn btn-link" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa fa-pen"></i>
                                </a>
                                <a class="btn btn-link" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }



                </tbody>

            </table>
        }
        else
        {
            <div class="p-5 d-flex flex-column justify-content-center align-items-center">

                <i class="fa fa-5x fa-exclamation-triangle text-secondary"></i>
                <div class="p-2">
                    Henüz bir kayıt bulunmamaktadır
                </div>
                <div class="p-2">
                    Yeni kayıt eklemek için <a asp-action="Create">tıklayınız</a>.
                </div>

            </div>
        }
    </div>

</div>